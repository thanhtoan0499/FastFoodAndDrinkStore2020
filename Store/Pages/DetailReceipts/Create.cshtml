@page
@model Store.Pages.DetailReceipts.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>DetailReceipt</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="DetailReceipt.ReceiptID" class="control-label"></label>
                <select asp-for="DetailReceipt.ReceiptID" asp-items="@Model.Receipts" class="form-control">
                </select>
                <span asp-validation-for="DetailReceipt.ReceiptID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailReceipt.ProductID" class="control-label"></label>
                <select asp-for="DetailReceipt.ProductID" asp-items="@Model.Products" class="form-control" > 
                </select>
                <span asp-validation-for="DetailReceipt.ProductID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DetailReceipt.Quantity" class="control-label"></label>
                <input asp-for="DetailReceipt.Quantity" class="form-control" />
                <span asp-validation-for="DetailReceipt.Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
    
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index" asp-route-receiptID="@ViewData["receiptId"]">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
