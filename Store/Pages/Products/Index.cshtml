@page
@model Store.Pages.Products.IndexModel
@{  
    ViewData["Title"]="Product";
}
<h1>Manage products</h1>

<p>
    <a asp-page="./Create">Create new product</a>
</p>
<form>
    <p>
        Code:
        <input asp-for="searchCode" style="width:50px">
        Name:
        <input type="text" asp-for="searchName">
        Type:
        <select asp-for="searchType" asp-items="Model.ProductIndexVm.Types">
            <option value="">All</option>
        </select>
        Price:<input style="width:100px" asp-for="searchPriceFrom" >to<input  style="width:100px"  asp-for="searchPriceTo" />
        Quantity:<input  style="width:50px"  asp-for="searchQuantityFrom" >to<input  style="width:50px"  asp-for="searchQuantityTo"/>
        <input type="submit" value="Filter">
        <a asp-action="Back" >Back to full list</a>
    </p>
    
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductIndexVm.Products[0].id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductIndexVm.Products[0].Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductIndexVm.Products[0].Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductIndexVm.Products[0].Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductIndexVm.Products[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductIndexVm.Products[0].Note)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.ProductIndexVm.Products) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Type)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Note)
            </td>
            <td>
                <a asp-page="./Edit" asp-route-id="@item.id">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>

@{
    var preDisabled = !Model.ProductIndexVm.Products.HasPrevious ? "disabled" : "";
    var nextDisabled = !Model.ProductIndexVm.Products.HasNext ? "disabled" : "";
}
<div class="container">
    <a  asp-page="Index" 
        asp-route-pageIndex="@(Model.ProductIndexVm.Products.PageIndex - 1)" 
        class="btn btn-default @preDisabled" asp-route-searchName="@Model.searchName" asp-route-searchType="@Model.searchType" asp-route-searchPriceFrom="@Model.searchPriceFrom" asp-route-searchPriceTo="@Model.searchPriceTo" asp-route-searchQuantityFrom="@Model.searchQuantityFrom" asp-route-searchQuantityTo="@Model.searchQuantityTo" >Previous</a>

    <a  asp-page="Index" 
        asp-route-pageIndex="@(Model.ProductIndexVm.Products.PageIndex + 1)" 
        class="btn btn-default @nextDisabled" asp-route-searchName="@Model.searchName" asp-route-searchType="@Model.searchType" asp-route-searchPriceFrom="@Model.searchPriceFrom" asp-route-searchPriceTo="@Model.searchPriceTo" asp-route-searchQuantityFrom="@Model.searchQuantityFrom" asp-route-searchQuantityTo="@Model.searchQuantityTo">Next</a>
</div>
