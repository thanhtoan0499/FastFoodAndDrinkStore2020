@page
@model Store.Pages.Staffs.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Staff</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Staff.LastName" class="control-label"></label>
                <input asp-for="Staff.LastName" class="form-control" />
                <span asp-validation-for="Staff.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.FirstName" class="control-label"></label>
                <input asp-for="Staff.FirstName" class="form-control" />
                <span asp-validation-for="Staff.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Dob" class="control-label"></label>
                <input asp-for="Staff.Dob" class="form-control" />
                <span asp-validation-for="Staff.Dob" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Gender" class="control-label"></label>
                <select asp-for="Staff.Gender" class="form-control" >
                    <option value="Female">Female</option>
                    <option value="Male">Male</option>
                </select>
                <span asp-validation-for="Staff.Gender" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Address" class="control-label"></label>
                <input asp-for="Staff.Address" class="form-control" />
                <span asp-validation-for="Staff.Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.Position" class="control-label"></label>
                <input asp-for="Staff.Position" class="form-control" />
                <span asp-validation-for="Staff.Position" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Staff.SalaryRate" class="control-label"></label>
                <input asp-for="Staff.SalaryRate" class="form-control" />
                <span asp-validation-for="Staff.SalaryRate" class="text-danger"></span>
            </div>
            
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
